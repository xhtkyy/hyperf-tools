{
    "name": "xhtkyy/hyperf-tools",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf"
    ],
    "description": "hyperf tools",
    "autoload": {
        "psr-4": {
            "Xhtkyy\\HyperfTools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": ">=8.0",
        "dtm/dtm-client": "^0.3.2",
        "hyperf/di": "3.0.*",
        "hyperf/event": "^3.0.0",
        "hyperf/framework": "3.0.*",
        "hyperf/grpc-client": "^3.0.0",
        "hyperf/load-balancer": "^3.0.0",
        "hyperf/service-governance": "^3.0.0",
        "hyperf/service-governance-consul": "^3.0.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": ">=7.0",
        "swoole/ide-helper": "^4.5"
    },
    "suggest": {
        "swow/swow": "Required to create swow components."
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "Xhtkyy\\HyperfTools\\ConfigProvider"
        }
    }
}
